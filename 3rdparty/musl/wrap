#!/bin/bash

# Copyright (c) Microsoft Corporation. All rights reserved.
# Licensed under the MIT License.

if [ "$#" != "3" ]; then
   echo "Usage: $0 FILENAME PREFIX SUFFIX"
   exit 1
fi

if [ ! -f "$2" ]; then
   echo "$0: not found: $2"
   exit 1
fi

if [ ! -f "$3" ]; then
   echo "$0: not found: $3"
   exit 1
fi

tmpfile=`/bin/mktemp`
cat $2 > ${tmpfile}
cat $1 >> ${tmpfile}
cat $3 >> ${tmpfile}
cp ${tmpfile} $1
